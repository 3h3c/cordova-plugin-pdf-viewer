<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.sopjs.cordova.plugin.pdf-viewer"
        version="0.1.1">

    <name>PDFViewer</name>

    <description>A PDF Viewer for Cordova 3.x.x</description>
    <repo>https://github.com/sopjs/cordova-plugin-pdf-viewer.git</repo>
    <keywords>zip, unzip, ios, android, windows phone, wp8, cordova, phonegap</keywords>
    <license>Apache 2.0</license>

    <author>Edouard DAUBIN</author>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
    <feature name="CDVPDFViewer">
			<param name="ios-package" value="CDVPDFViewer" />
    </feature>
        </config-file>

